{
  "kind": "collectionType",
  "collectionName": "bookings",
  "info": {
    "singularName": "booking",
    "pluralName": "bookings",
    "displayName": "Booking",
    "description": "Central reservation record for tours and courses"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "bookingCode": {
      "type": "uid",
      "required": true
    },
    "bookingStatus": {
      "type": "enumeration",
      "enum": [
        "pending",
        "confirmed",
        "cancelled",
        "completed"
      ],
      "default": "pending"
    },
    "paymentStatus": {
      "type": "enumeration",
      "enum": [
        "unpaid",
        "paid",
        "refunded"
      ],
      "default": "unpaid"
    },
    "priceTotal": {
      "type": "decimal"
    },
    "currency": {
      "type": "string",
      "default": "EUR"
    },
    "guestCountTotal": {
      "type": "integer"
    },
    "source": {
      "type": "string",
      "default": "website"
    },
    "transactionToken": {
      "type": "string",
      "private": true
    },
    "newsletterOptIn": {
      "type": "boolean",
      "default": false
    },
    "termsAccepted": {
      "type": "boolean",
      "default": false
    },
    "leadCustomer": {
      "type": "component",
      "repeatable": false,
      "component": "booking.lead-customer"
    },
    "bookingItems": {
      "type": "component",
      "repeatable": true,
      "component": "booking.booking-item"
    }
  }
}
